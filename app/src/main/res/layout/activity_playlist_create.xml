<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	tools:context = ".ui.PlaylistCreateActivity">

	<EditText
		android:id="@+id/txt_playlistName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:ems="10"
		android:inputType="text"
		android:text="Playlist" />

	<EditText
		android:id="@+id/txt_playlistDescription"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignEnd="@+id/txt_playlistName"
		android:layout_alignRight="@+id/txt_playlistName"
		android:layout_below="@+id/txt_playlistName"
		android:ems="10"
		android:inputType="textPersonName"
		android:text="Name" />

	<Button
		android:id="@+id/btn_addPlaylist"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:text="Add Playlist" />

</RelativeLayout>