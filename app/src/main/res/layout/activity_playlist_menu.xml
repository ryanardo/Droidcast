<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
	xmlns:tools = "http://schemas.android.com/tools"
	android:layout_width = "match_parent"
	android:layout_height = "match_parent"
	tools:context = ".ui.PlaylistMenuActivity">

	<EditText
		android:id="@+id/srch_playlistName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/btn_createPlaylist"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:ems="10"
		android:inputType="text"
		android:text="Search" />

	<Button
		android:id="@+id/btn_createPlaylist"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:text="CREATE PLAYLIST" />

	<ListView
		android:id="@+id/lst_playlists"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/srch_playlistName" />

</RelativeLayout>